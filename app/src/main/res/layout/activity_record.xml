<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nvTransportation"
            style="@android:style/Widget.Material.Light.Button.Small"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:elegantTextHeight="true"
            android:onClick="launchTransportation"
            android:text="Transportation"
            android:textColor="D9D9D9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Button
            android:id="@+id/nvFood"
            style="@android:style/Widget.Material.Light.Button.Small"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="42dp"
            android:onClick="launchFood"
            android:text="Food"
            android:textColor="#A9BCD0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nvTransportation" />

        <Button
            android:id="@+id/nvConsumption"
            style="@android:style/Widget.Material.Light.Button.Small"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/DarkBlue"
            android:backgroundTint="#373F51"
            android:onClick="launchConsumption"
            android:text="Consumption"
            android:textColor="#373F51"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nvFood"
            app:rippleColor="#373F51"
            app:strokeColor="#373F51" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="356dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="790dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/nvHome"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="H"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/nvEcoTracker"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/nvEcoTracker"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/nvRecord"
                    app:layout_constraintStart_toEndOf="@+id/nvHome"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/nvChat"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="R"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nvEcoHub"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/nvRecord"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="H"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/nvEcoHub"
                    app:layout_constraintStart_toEndOf="@+id/nvEcoTracker"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/nvEcoHub"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/nvChat"
                    app:layout_constraintStart_toEndOf="@+id/nvRecord"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>