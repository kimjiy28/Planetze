<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please specify your current location"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />
            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <!-- Transportation Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportation"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Do you own or regularly use a car?" />
            <RadioGroup
                android:id="@+id/question1Group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/question2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. What type of car do you drive?" />
                <RadioGroup
                    android:id="@+id/question2Group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gasoline" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Diesel" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hybrid" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Electric" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="I don’t know" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. How many kilometers/miles do you drive per year?" />
                <RadioGroup
                    android:id="@+id/question3Group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Up to 5,000 km" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5,000–10,000 km" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10,000–15,000 km" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15,000–20,000 km" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20,000–25,000 km" />
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More than 25,000 km" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. How often do you use public transportation?" />
            <RadioGroup
                android:id="@+id/question4Group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Never" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Occasionally (1-2 times/week)" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Frequently (3-4 times/week)" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Always (5+ times/week)" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. How much time do you spend on public transport per week?" />
            <RadioGroup
                android:id="@+id/question5Group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Under 1 hour" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1-3 hours" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3-5 hours" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5-10 hours" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More than 10 hours" />
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. How many short-haul flights have you taken in the past year?" />
            <RadioGroup
                android:id="@+id/question6Group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="None" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1-2 flights" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3-5 flights" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6-10 flights" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More than 10 flights" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. How many long-haul flights have you taken in the past year?" />
            <RadioGroup
                android:id="@+id/question7Group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="None" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1-2 flights" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3-5 flights" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6-10 flights" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More than 10 flights" />
            </RadioGroup>

            <!-- Food Section -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. What best describes your diet?" />
            <RadioGroup
                android:id="@+id/question8Group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vegetarian" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vegan" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pescatarian" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Meat-based" />
            </RadioGroup>

            <!-- Question 9 (Conditional) -->
            <LinearLayout
                android:id="@+id/question9Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. How often do you eat the following animal-based products?"
                    android:textSize="16sp"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How often do you eat beef?" />

                    <RadioGroup
                        android:id="@+id/question9BeefGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequently (3-5 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occasionally (1-2 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Never" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How often do you eat pork?" />

                    <RadioGroup
                        android:id="@+id/question9PorkGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequently (3-5 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occasionally (1-2 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Never" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How often do you eat chicken?"
                        android:paddingTop="8dp" />

                    <RadioGroup
                        android:id="@+id/question9ChickenGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequently (3-5 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occasionally (1-2 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Never" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How often do you eat fish?"
                        android:paddingTop="8dp" />

                    <RadioGroup
                        android:id="@+id/question9FishGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequently (3-5 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occasionally (1-2 times/week)" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Never" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10. How often do you waste food or throw away uneaten leftovers?" />
            <RadioGroup android:id="@+id/question10Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Never" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rarely" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Occasionally" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Frequently" />
            </RadioGroup>

            <!-- Housing Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Housing"
                android:textStyle="bold" android:textSize="18sp" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="11. What type of home do you live in?" />
            <RadioGroup android:id="@+id/question11Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Detached house" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Semi-detached house" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Townhouse" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Condo/Apartment" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Other" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="12. How many people live in your household?" />
            <RadioGroup android:id="@+id/question12Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3-4" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 or more" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="13. What is the size of your home?" />
            <RadioGroup android:id="@+id/question13Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Under 1000 sq. ft." />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1000-2000 sq. ft." />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Over 2000 sq. ft." />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="14. What type of energy do you use to heat your home?" />
            <RadioGroup android:id="@+id/question14Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Natural Gas" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Electricity" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Oil" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Propane" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wood" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Other" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="15. What is your average monthly electricity bill?" />
            <RadioGroup android:id="@+id/question15Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Under $50" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$50-$100" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$100-$150" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$150-$200" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Over $200" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="16. What type of energy do you use to heat water?" />
            <RadioGroup android:id="@+id/question16Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Natural Gas" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Electricity" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Oil" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Propane" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wood" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Other" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="17. Do you use any renewable energy sources for electricity or heating?" />
            <RadioGroup android:id="@+id/question17Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes, primarily" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes, partially" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" />
            </RadioGroup>

            <!-- Consumption Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Consumption"
                android:textStyle="bold" android:textSize="18sp" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="18. How often do you buy new clothes?" />
            <RadioGroup android:id="@+id/question18Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Monthly" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quarterly" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Annually" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rarely" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="19. Do you buy second-hand or eco-friendly products?" />
            <RadioGroup android:id="@+id/question19Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes, regularly" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes, occasionally" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="20. How many electronic devices have you purchased this year?" />
            <RadioGroup android:id="@+id/question20Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="None" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 or more" />
            </RadioGroup>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="21. How often do you recycle household waste?" />
            <RadioGroup android:id="@+id/question21Group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Never" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Occasionally" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Frequently" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Always" />
            </RadioGroup>

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
