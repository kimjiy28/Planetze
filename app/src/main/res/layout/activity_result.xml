<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalCO2View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Annual Carbon Footprint"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/breakdownView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakdown"
            android:textSize="18sp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your result will appear here."
            android:textSize="18sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/global_comparison_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global target comparison will appear here."
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>