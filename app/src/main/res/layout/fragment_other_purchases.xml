<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherPurchasesFragment">

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type of Items Purchased *"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/darkblue"/>

    <EditText
        android:id="@+id/txType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:hint="i.e. Furniture"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/amount"
        android:layout_below="@+id/txType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Items Purchased *"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/darkblue"/>

    <EditText
        android:id="@+id/txAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount"
        android:hint="i.e. 1"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/darkblue" />

</RelativeLayout>